<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CalendarActivity">

    <CalendarView
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shopView"
        android:background="@drawable/calendarbackground"
        android:layout_marginTop="24dp"/>
    <Spinner
        android:id="@+id/timeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/datePicker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/calendarbackground"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="10sp"
        android:gravity="center"
        android:text="Book"
        app:layout_constraintTop_toBottomOf="@id/timeSpinner"
        app:layout_constraintLeft_toLeftOf="@id/datePicker"
        app:layout_constraintRight_toRightOf="@id/datePicker"
        android:background="@drawable/bookbutton"
        android:layout_marginTop="34dp"
        />


    <TextView
        android:id="@+id/shopView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#707070"
        android:lineSpacingExtra="7sp"
        android:gravity="center"
        android:text="SHOP A"
        android:background="@drawable/shopbackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>